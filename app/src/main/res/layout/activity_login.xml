<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context="com.tianyigps.online.activity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_424"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_login_light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_32">

        <ImageView
            android:id="@+id/vi_activity_login_icon"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_32"
            android:src="@drawable/ic_login_icon"
            />

        <LinearLayout
            android:id="@+id/ll_activity_login_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vi_activity_login_icon"
            android:layout_marginTop="@dimen/dp_32"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:padding="@dimen/dp_2"
                android:src="@drawable/ic_account"/>

            <EditText
                android:id="@+id/et_activity_login_account"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/enter_account"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textSize="@dimen/sp_14"
                />

            <ImageView
                android:id="@+id/iv_activity_login_pull"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:padding="@dimen/dp_2"
                android:src="@drawable/ic_pull"/>

        </LinearLayout>

        <View
            android:id="@+id/view_activity_login_line_1"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/px_1"
            android:layout_height="@dimen/px_1"
            android:layout_below="@id/ll_activity_login_account"
            android:background="@color/colorWhite"/>

        <LinearLayout
            android:id="@+id/ll_activity_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_activity_login_line_1"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:padding="@dimen/dp_2"
                android:src="@drawable/ic_password"/>

            <EditText
                android:id="@+id/et_activity_login_password"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>

        <View
            android:id="@+id/view_activity_login_line_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_below="@id/ll_activity_login_password"
            android:background="@color/colorWhite"/>

        <CheckBox
            android:id="@+id/cb_activity_login_remember_password"
            style="@style/MyCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_activity_login_line_2"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/remember_password"
            android:textColor="@color/colorWhite"/>

        <CheckBox
            android:id="@+id/cb_activity_login_auto"
            style="@style/MyCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/cb_activity_login_remember_password"
            android:text="@string/auto_login"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/btn_activity_login_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/cb_activity_login_remember_password"
            android:layout_marginTop="@dimen/dp_48"
            android:background="@drawable/bg_button_login"
            android:text="@string/login"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dp_48"
        android:text="天易科技 让汽车更有价值"
        android:textColor="@color/colorBlueAlpha"
        android:textSize="@dimen/sp_12"/>

</FrameLayout>
