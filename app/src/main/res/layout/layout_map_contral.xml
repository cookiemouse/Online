<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_layout_map_control_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrayAlpha"/>

    <TextView
        android:id="@+id/tv_layout_map_control_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_layout_map_control_satellite"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_1"
        android:layout_toLeftOf="@+id/tv_layout_map_control_satellite"
        android:layout_toStartOf="@+id/tv_layout_map_control_satellite"
        android:background="@drawable/bg_map_control_select"
        android:text="@string/map"/>

    <TextView
        android:id="@+id/tv_layout_map_control_satellite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_layout_map_control_address"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_map_control"
        android:text="@string/satellite"/>

    <ImageView
        android:id="@+id/iv_layout_map_control_locate"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:padding="@dimen/dp_2"
        android:src="@drawable/ic_location_self"/>

    <ImageView
        android:id="@+id/iv_layout_map_control_left"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_160"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_map_control_left"/>

    <ImageView
        android:id="@+id/iv_layout_map_control_right"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_160"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_map_control_right"/>

</RelativeLayout>