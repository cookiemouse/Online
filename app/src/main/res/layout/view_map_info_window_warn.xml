<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dp_240"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/dp_12"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_240"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:padding="@dimen/dp_4">

        <ImageView
            android:id="@+id/iv_view_info_window_close"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="end"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_delete"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_view_info_window_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:text="沪KZ7555"/>

            <TextView
                android:id="@+id/tv_view_info_window_warn_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="断电"
                android:textColor="@color/colorOrange"/>

            <TextView
                android:id="@+id/tv_view_info_window_warn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_32"
                android:layout_marginEnd="@dimen/dp_32"
                android:text="@string/warn"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_view_info_window_warn_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:text="2017/07/19 14:15:39"/>

        <TextView
            android:id="@+id/tv_view_info_window_warn_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:maxEms="16"
            android:text="位置："/>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_info_part"/>

</LinearLayout>