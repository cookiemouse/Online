<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp_8">

    <ImageView
        android:id="@+id/iv_item_warn_icon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:padding="@dimen/dp_8"
        android:src="@drawable/ic_wran"/>

    <ImageView
        android:id="@+id/iv_item_warn_go"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_8"
        android:src="@drawable/ic_go"/>

    <TextView
        android:id="@+id/tv_item_warn_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/dp_240"
        android:ellipsize="end"
        android:lines="1"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_item_warn_icon"
        android:layout_toRightOf="@+id/iv_item_warn_icon"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_12"/>

    <TextView
        android:id="@+id/tv_item_warn_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_warn_icon"
        android:layout_toEndOf="@+id/iv_item_warn_icon"
        android:layout_toRightOf="@+id/iv_item_warn_icon"
        android:textSize="@dimen/sp_12"/>

    <TextView
        android:id="@+id/tv_item_warn_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_warn_go"
        android:layout_toLeftOf="@+id/iv_item_warn_go"
        android:layout_toStartOf="@+id/iv_item_warn_go"
        android:textSize="@dimen/sp_12"/>

</RelativeLayout>