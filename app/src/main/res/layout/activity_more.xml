<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tianyigps.online.activity.MoreActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_table_row">

        <TableRow
            android:id="@+id/tr_activity_more_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_32"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="详备详情"
                android:textSize="@dimen/sp_16"
                />

            <ImageView
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:padding="@dimen/dp_2"
                android:src="@drawable/ic_go"
                />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/colorBlueTheme"
            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_32"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="围栏管理"
                android:textSize="@dimen/sp_16"
                />

            <ImageView
                android:id="@+id/iv_activity_more_enclosure_manage"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_32"
                android:src="@drawable/bg_switch"
                />
        </TableRow>

        <View
            android:id="@+id/view_activity_more_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/colorBlueTheme"
            android:visibility="gone"
            />

        <TableRow
            android:id="@+id/tr_activity_more_enclosure_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_32"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="围栏设置"
                android:textSize="@dimen/sp_16"
                />

            <ImageView
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:padding="@dimen/dp_2"
                android:src="@drawable/ic_go"
                />
        </TableRow>

    </TableLayout>

</FrameLayout>
