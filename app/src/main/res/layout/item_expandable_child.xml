<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:padding="@dimen/dp_4">

    <ImageView
        android:id="@+id/iv_item_expandable_child_icon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_2"
        android:src="@drawable/ic_car"/>

    <ImageView
        android:id="@+id/iv_item_expandable_child_concern"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_2"
        android:src="@drawable/ic_concern"/>

    <TextView
        android:id="@+id/tv_item_expandable_child_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_32"
        android:layout_centerVertical="true"
        android:maxWidth="@dimen/dp_200"
        android:lines="1"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/iv_item_expandable_child_icon"
        android:layout_toRightOf="@+id/iv_item_expandable_child_icon"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textSize="@dimen/sp_14"/>

    <TextView
        android:id="@+id/tv_item_expandable_child_status"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_expandable_child_icon"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_toLeftOf="@+id/iv_item_expandable_child_concern"
        android:layout_toStartOf="@+id/iv_item_expandable_child_concern"
        android:text="状态"/>

    <TextView
        android:id="@+id/tv_item_expandable_child_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_expandable_child_icon"
        android:layout_alignLeft="@+id/tv_item_expandable_child_status"
        android:layout_alignStart="@+id/tv_item_expandable_child_status"
        android:text="时间"/>

</RelativeLayout>